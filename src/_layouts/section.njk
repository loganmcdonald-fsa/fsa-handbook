---
layout: default
---

<section class="hero">
  <div class="grid-container">
    <div class="grid-row">
      <div class="tablet:grid-col-8">
        <h1>{{ title }}</h1>
        <p class="usa-intro">{{ description }}</p>
      </div>
    </div>
  </div>
</section>

<section class="grid-container" style="padding: 3rem 0;">
  <div class="grid-row">
    <div class="tablet:grid-col-12">
      {% set sectionPosts = collections.all | reverse %}
      {% for post in sectionPosts %}
        {% if post.data.section == section and post.data.layout == 'post' %}
          <div class="post-card">
            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
            <div class="post-meta">
              <time datetime="{{ post.data.date }}">{{ post.data.date | readableDate }}</time>
            </div>
            <p>{{ post.data.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
