---
layout: default
---

<section class="breadcrumb">
  <div class="grid-container">
    <nav aria-label="Breadcrumbs">
      <a href="/">Home</a> / 
      <a href="/{{ section }}/">{{ section | capitalize | replace("-", " ") }}</a> / 
      {{ title }}
    </nav>
  </div>
</section>

<section class="grid-container" style="padding: 3rem 0;">
  <div class="grid-row">
    <div class="tablet:grid-col-10 desktop:grid-col-8">
      <article class="post">
        <header class="post-header">
          <h1>{{ title }}</h1>
          <div class="post-meta">
            <time datetime="{{ date }}">{{ date | readableDate }}</time>
          </div>
        </header>
        
        <div class="post-content">
          {{ content | safe }}
        </div>
      </article>
    </div>
  </div>
</section>
